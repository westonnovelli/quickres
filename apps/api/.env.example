# Database Configuration
DATABASE_URL=sqlite:quick-res.db

# Application Configuration
BASE_URL=http://localhost:8000
APP_NAME=Quick Reservations
APP_ENVIRONMENT=development
PORT=8000

# Email Configuration
EMAIL_FROM=noreply@quick-res.example.com
EMAIL_FROM_NAME=Quick Reservations
EMAIL_PROVIDER=console
# For production, use one of: smtp, sendgrid, mailgun, ses

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
